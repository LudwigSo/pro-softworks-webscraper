{
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Port=5432;Database=mydatabase;Username=myuser;Password=mypassword;"
  },
  "AllowedHosts": "*",
  "Keycloak": {
    "AuthorizationUrl": "http://localhost:18080/realms/pro-softworks/protocol/openid-connect/auth",
    "MetadataAddress": "http://keycloak:8080/realms/pro-softworks/.well-known/openid-configuration",
    "ValidIssuer": "http://localhost:18080/realms/pro-softworks",
    "Audience": "account"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/log.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ]
  }
}
